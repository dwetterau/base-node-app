extends ../layout

block content

  .page-header
    h1 Sign in
  .well.bs-component
    form.form-horizontal(action="/user/login", method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      input(type='hidden', name='redirect', value=redirect)
      .form-group.form-group-material-indigo
        .col-sm-offset-3.col-sm-6
          input.form-control.floating-label(
            type='text', name='username', id='username', placeholder='Username' autofocus)
      .form-group.form-group-material-indigo
        .col-sm-offset-3.col-sm-6
          input.form-control.floating-label(
            type='password', name='password', id='password', placeholder='Password')
      .form-group.form-group-material-indigo
        .col-sm-offset-3.col-sm-6
          button.btn.btn-success(type='submit')
            span.ion-person-add
            | Login
